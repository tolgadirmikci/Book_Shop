@using PagedList.Mvc;
@using PagedList;
@model PagedList.IPagedList<Book_Shop.Models.Book>
@using Book_Shop.Models
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin_Layout/_AdminLayout.cshtml";
}
<head>
    <link href="~/Content/PagedList.css" rel="stylesheet" />
</head>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Dashboard-Book Management</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <p>
        <a href="@Url.Action("CreateBook","AdminBookManagement")" class="btn btn-success"><i class="fa fa-plus"></i> Add Book</a>
      
    </p>

    <table class="table table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Author.AuthorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Category.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().BookName)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().BookSummary)
                </th>
            <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().BookIsbnNo)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().BookPhotoPath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().BookQuantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().BookPrice)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Author.AuthorName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookSummary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookIsbnNo)
                </td>
                <td>
                   <img width="100" src="@item.BookPhotoPath" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookQuantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookPrice)
                </td>
                <td>
                    <a class="btn btn-warning btn-circle" href="@Url.Action("EditBook", "AdminBookManagement", new { id = item.Id })">
                        <i class="fa fa-edit"></i>
                    </a> |<br />
                    <a class="btn btn-primary btn-circle" href="@Url.Action("DetailsBook", "AdminBookManagement", new { id = item.Id })">
                        <i class="fa fa-location-arrow"></i>
                    </a> |<br />
                    <a class="btn btn-danger btn-circle" href="@Url.Action("DeleteBook", "AdminBookManagement", new { id = item.Id })">
                        <i class="fa fa-trash"></i>
                    </a>



                    @*@Html.ActionLink("Edit", "EditBook", new { id = item.Id }) |
                    @Html.ActionLink("Details", "DetailsBook", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "DeleteBook", new { id = item.Id })*@
                </td>
            </tr>
        }

    </table>

    <div class="text-center">
        <div class="pagination">
            @Html.PagedListPager(Model, Page => Url.Action("Index", new { Page }), PagedListRenderOptions.Classic)
        </div>
    </div>
  
    </div>

 

