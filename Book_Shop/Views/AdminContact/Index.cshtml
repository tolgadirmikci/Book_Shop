@model IEnumerable<Book_Shop.Models.Contact>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin_Layout/_AdminLayout.cshtml";
}

<h2>Index</h2>
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Dashboard-Book Management</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ContactName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactMessage)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactEmail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactPhone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactMessage)
                </td>
                <td>  
                    <a href="@Url.Action("DeleteContact","AdminContact",new { id=item.Id})" class="btn btn-danger btn-circle">
                    <i class="fa fa-trash"></i>
                    </a> 
                </td>
            </tr>
        }

    </table>
    </div>