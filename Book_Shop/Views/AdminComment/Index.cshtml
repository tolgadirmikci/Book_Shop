@model IEnumerable<Book_Shop.Models.Comment>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin_Layout/_AdminLayout.cshtml";
}

<h2>Index</h2>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Dashboard-Book Management</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Books.BookName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CommenterName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CommentText)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Books.BookName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CommenterName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CommentText)
                </td>
                <td>
                    <a href="@Url.Action("Delete","AdminComment",new { id=item.Id})" class="btn btn-danger btn-circle">
                        <i class="fa fa-trash"></i>
                    </a>
                   
                </td>
            </tr>
        }

    </table>
    </div>